{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Porject",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "-Wall",
        "-Werror",
        "-pedantic",
        "-std=c++17",
        "-o",
        "${workspaceFolder}/bin/MagonServer",
        "-I",
        "${workspaceFolder}/src/headers",
        "${workspaceFolder}/src/cpp/main.cpp"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      }
    }
  ]
}
